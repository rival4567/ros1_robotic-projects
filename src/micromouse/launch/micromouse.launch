<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="model" default="$(find micromouse)/urdf/micromouse_bot.urdf.xacro"/>
  <arg name="extra_gazebo_args" default="--verbose"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find micromouse)/worlds/micromouse_world/micromouse_empty.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="extra_gazebo_args" value="$(arg extra_gazebo_args)"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/>
  <rosparam file="$(find micromouse)/config/velocity_control.yaml" command="load"/>

  <node name="controller_spawner" pkg ="controller_manager" type="spawner" ns="/micromouse" args="
  left_wheel_joint_velocity_controller right_wheel_joint_velocity_controller joint_state_controller"/>
  
  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        args="-x -1.35 -y 1.23 -z 0.03 -unpause -urdf -model robot -param robot_description" respawn="false" output="screen" />

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/micromouse/cmd_vel"/>
  </node>

</launch>
